[core]
    editor = vim
    whitespace = space-before-tab,trailing-space,cr-at-eol

[alias]
    ci = commit
    amend = commit --amend
    st = status -sb
    br = branch
    co = checkout
    df = diff
    rb = rebase
    rank = shortlog -sn --no-merges
    lg = log --graph --abbrev-commit --date=relative --pretty=format:'%C(yellow)%h%Creset -%Cred%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    gr = grep --heading --break
    conflicted = diff --name-only --diff-filter=U

[branch]
    autosetupmerge = always

[merge]
    conflictstyle = diff3

[push]
    default = current

[log]
    date = default

[help]
    format = man
    autocorrect = -1

[grep]
    extendRegexp = true
    lineNumber = true

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[diff]
    compactionHeuristic = true

[commit]
     verbose = true
     gpgSign = true

[fetch]
    prune = true
