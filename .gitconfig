[user]
    name = Ali Kaafarani
    email = ali@kvikshaug.no

[core]
    editor = vim
    whitespace = blank-at-eol,space-before-tab,tab-in-indent,cr-at-eol

[alias]
    ci = commit
    st = status -sb
    br = branch
    co = checkout
    df = diff
    fp = fetch --prune
    rb = rebase
    rank = rank = shortlog -sn --no-merges
    lg = log --graph --abbrev-commit --date=relative --pretty=format:'%C(yellow)%h%Creset -%Cred%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

[branch]
    autosetupmerge = always

[merge]
    conflictstyle = diff3

[push]
    default = current

[log]
    date = relative

[color]
    branch = true
    status = true
    diff = true

[help]
    format = man #/html
    browser = opera
    autocorrect = -20

[instaweb]
    httpd = lighttpd
    browser = opera

[web]
    browser = opera

[browser "opera"]
    cmd = opera
